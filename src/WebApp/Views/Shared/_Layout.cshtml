<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />

    <!-- Document title -->
    <title>Dashboard</title>

    <meta name="description" content="Admin Dashboard Template & UI Framework" />
    <meta name="author" content="jc" />
    <meta name="robots" content="noindex, nofollow" />

    <!-- Favicons -->
    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/images/favicons/apple-touch-icon-144-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/images/favicons/apple-touch-icon-114-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/images/favicons/apple-touch-icon-72-precomposed.png" />
    <link rel="apple-touch-icon-precomposed" href="~/images/favicons/apple-touch-icon-57-precomposed.png" />
    <link rel="shortcut icon" href="~/images/favicons/favicon.png" />

    <!-- Page JS Plugins CSS -->
    <link rel="stylesheet" type="text/css" href="~/Css/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Css/icons/bootstrap-icons.css" />
    <link rel="stylesheet" type="text/css" href="~/Css/jquery.ui/1.13.2/jquery-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Css/style.css?v=2" />

    <script type="text/javascript" src="~/js/jQuery/jquery-3.7.0.min.js"></script>
    <script type="text/javascript" src="~/css/jquery.ui/1.13.2/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/css/jquery.ui/1.13.2/jquery-ui-datepicker.zh-CN.min.js"></script>
    <script type="text/javascript" src="~/Css/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/site.msg.js"></script>
    <script type="text/javascript" src="~/js/common.js"></script>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="assets/js/html5shiv.min.js")"></script>
      <script src="assets/js/responde.min.js")"></script>
    <![endif]-->
</head>
<body>
    @await Html.PartialAsync("_TopNav")
    <div class="container-fluid main-container">
        <div class="row main-container-row">
            <div class="sidebar col-md-3 col-lg-2 p-0 left-nav">
                @await Html.PartialAsync("_LeftNav")
            </div>
            <main class="col-md-9 col-lg-10 px-md-4">
                <div class="height-15"></div>
                @RenderBody()
            </main>
        </div>
    </div>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
    <script type="text/javascript">
        for (var i = 1; i < 10; i++) {
            var id = "collapseExample" + i;
            var myCollapsible = $("#" + id);
            if (!myCollapsible || myCollapsible == undefined || myCollapsible == null) {
                break;
            }
            myCollapsible.on('hide.bs.collapse', { id: id }, event => {
                var coll_icon = $("#" + event.data.id + "-icon");
                if (coll_icon) {
                    coll_icon.attr("class", "bi bi-chevron-down");
                }
            });
            myCollapsible.on('show.bs.collapse', { id: id }, event => {
                var coll_icon = $("#" + event.data.id + "-icon");
                if (coll_icon) {
                    coll_icon.attr("class", "bi bi-chevron-up");
                }
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
